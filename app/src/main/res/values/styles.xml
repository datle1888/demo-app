    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.DashBoard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="top_selection_text_unselected" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/rajdhani_semibold</item>
        <item name="android:fontFamily">@font/rajdhani_semibold</item>
        <item name="android:textSize">@dimen/tz_medium</item>
        <item name="android:lineHeight" tools:ignore="NewApi">@dimen/top_text_unselected_line_height</item>
        <item name="android:drawablePadding">@dimen/top_text_unselected_draw_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="caption" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_caption</item>
    </style>

    <style name="large_title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_large</item>
    </style>

    <style name="hint" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_medium</item>
    </style>


    <style name="hint_jobs" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/tz_small</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="cmd_announcement" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/tz_small</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/padding_small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_large</item>
    </style>

    <style name="top_selection_highlighter">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="btn_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_style_dismiss" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="btn_bottom_app_style" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_bottom_btn_bg</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>


    <style name="hint_jobs_2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/tz_jobs_hint2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="title_jobs_2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_jobs2_title</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:maxEms">6</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>


    <style name="hint_plate" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_unselected_green</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/tz_small_montezerat</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="title_plate" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:fontFamily">@font/rajdhani_bold</item>
        <item name="android:textSize">@dimen/tz_medium</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>


    <style name="edt_notes" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">top|start</item>
        <item name="android:textSize">@dimen/tz_medium</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="img_face_img" >
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">@dimen/padding_face_img</item>
        <item name="android:radius">@dimen/padding_face_img</item>
        <item name="android:src">@mipmap/img_person_placeholder</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
